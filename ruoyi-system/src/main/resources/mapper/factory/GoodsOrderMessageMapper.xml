<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.factory.mapper.GoodsOrderMessageMapper">
    <resultMap type="com.ruoyi.factory.domain.GoodsOrderMessage" id="GoodsOrderMessageResult">
        <result property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="messageContent" column="message_content"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectGoodsOrderMessageVo">
        select id,
               order_id,
               user_id,
               user_name,
               message_content,
               status,
               del_flag,
               create_by,
               create_time,
               update_by,
               update_time
        from goods_order_message
    </sql>

    <select id="selectGoodsOrderMessageList" parameterType="com.ruoyi.factory.domain.GoodsOrderMessage"
            resultMap="GoodsOrderMessageResult">
        <include refid="selectGoodsOrderMessageVo"/>
        <where>
            del_flag = 0
            <if test="orderId != null ">
                and order_id = #{orderId}
            </if>
            <if test="userId != null ">
                and user_id = #{userId}
            </if>
            <if test="userName != null  and userName != ''">
                and user_name like concat('%', #{userName}, '%')
            </if>
            <if test="messageContent != null  and messageContent != ''">
                and message_content = #{messageContent}
            </if>
            <if test="status != null  and status != ''">
                and status = #{status}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectGoodsOrderMessageById" parameterType="Long" resultMap="GoodsOrderMessageResult">
        <include refid="selectGoodsOrderMessageVo"/>
        where id = #{id}
    </select>

    <insert id="insertGoodsOrderMessage" parameterType="com.ruoyi.factory.domain.GoodsOrderMessage"
            useGeneratedKeys="true" keyProperty="id">
        insert into goods_order_message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">
                order_id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="userName != null">
                user_name,
            </if>
            <if test="messageContent != null">
                message_content,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="delFlag != null">
                del_flag,
            </if>
            <if test="createBy != null">
                create_by,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateBy != null">
                update_by,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">
                #{orderId},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="userName != null">
                #{userName},
            </if>
            <if test="messageContent != null">
                #{messageContent},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="delFlag != null">
                #{delFlag},
            </if>
            <if test="createBy != null">
                #{createBy},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateBy != null">
                #{updateBy},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
        </trim>
    </insert>

    <update id="updateGoodsOrderMessage" parameterType="com.ruoyi.factory.domain.GoodsOrderMessage">
        update goods_order_message
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">
                order_id = #{orderId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="messageContent != null">
                message_content = #{messageContent},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
            <if test="createBy != null">
                create_by = #{createBy},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGoodsOrderMessageById" parameterType="Long">
        delete
        from goods_order_message
        where id = #{id}
    </delete>

    <delete id="deleteGoodsOrderMessageByIds" parameterType="String">
        delete from goods_order_message where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
